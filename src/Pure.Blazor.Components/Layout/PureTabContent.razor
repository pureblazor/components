@using Pure.Blazor.Components.Display
@inherits PureComponent
@if (TabContainer.CurrentTab == this)
{
    @if (UseCard)
    {
        <div class="flex flex-col w-full @Styles" role="tab">
            <PureCard Styles="border-t-transparent">
                @ChildContent
            </PureCard>
        </div>
    }
    else
    {
        <div class="flex flex-col w-full @Styles" role="tab">
            @ChildContent
        </div>
    }
}

@code {
    [CascadingParameter] [EditorRequired] public required PureTabs TabContainer { get; set; }

    [Parameter] public EventCallback OnChanging { get; set; }

    [Parameter] public string? Title { get; set; }
    [Parameter] public bool UseCard { get; set; }

    protected override void OnInitialized()
    {
        TabContainer.AddTab(this);
    }

}
