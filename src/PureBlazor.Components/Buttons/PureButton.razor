@namespace PureBlazor.Components
@inherits PureButtonBase

<button
    @attributes="InputAttributes"
    class="inline-flex justify-center rounded-sm text-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-600 @InternalCss @(Pressed ? "translate-y-[0.075rem]" : "")"
    disabled="@Disabled"
    @onmousedown="() => Pressed = true"
    @onmouseup="() => Pressed = false"
    @onclick="OnClicked">
    @if (ChildContent != null)
    {
        @ChildContent
    }
    else
    {
        @Text
    }
</button>