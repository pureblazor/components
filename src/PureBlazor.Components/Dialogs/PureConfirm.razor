<dialog class="p-6 border rounded-sm" id="confirm">
    <div class="py-4">
        @if (DialogService.Title != null)
        {
            <p class="font-bold leading-6">@DialogService.Title</p>
        }
    </div>
    <div class="mt-4 flex justify-end gap-4">
        <PureButton
            id="dialog_confirm--cancel"
            Variant="ButtonVariant.Subtle"
            OnClick="CancelAsync">Cancel</PureButton>

        <PureButton id="dialog_confirm--ack"
            Variant="ButtonVariant.Filled"
            Color="@DialogService.AckColor"
                    OnClick="ConfirmAsync">@DialogService.AckButton</PureButton>
    </div>
</dialog>
