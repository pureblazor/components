@namespace Pure.Blazor.Components
@inherits InteropComponent

<!-- Dropdowns take up full width of their parent container -->
<div class="relative inline-block text-left group/dropdown w-full">
    <div>
        <button type="button" class="@ApplyStyle($"{Css.Base} {Css.Size(Size)}")">
            @if (TitleFragment is not null)
            {
                @TitleFragment
            }
            else
            {
                @Title
            }
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
                <path fill-rule="evenodd" d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
            </svg>
        </button>
    </div>

    <div class="@($"{Css.InnerContainer?.Base}") @(Position == DropdownPosition.Right ? "right-0" : "left-0")"
         role="menu"
         aria-orientation="vertical"
         aria-labelledby="menu-button"
         tabindex="-1">
        <CascadingValue Value="this">
            @ChildContent
        </CascadingValue>
    </div>
</div>
