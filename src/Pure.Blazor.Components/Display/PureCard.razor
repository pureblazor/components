@inherits PureComponent

<div class="@ApplyStyle("rounded-md sm:rounded-sm shadow-md border-1 border-gray-200 bg-white")">
    @if (!string.IsNullOrWhiteSpace(ImageUrl))
    {
        <img src="@ImageUrl" alt="@ImageAlt"/>
    }

    <div class="@ApplyStyle("px-4 py-3", InnerContainerStyles)">
        @if (!string.IsNullOrWhiteSpace(Title))
        {
            <Header2>@Title</Header2>
        }
        <div class="text-base">
            @ChildContent
        </div>
    </div>
</div>

@code {
    [Parameter] public string? InnerContainerStyles { get; set; }

    [Parameter] public string? Title { get; set; }
    [Parameter] public string? ImageUrl { get; set; }
    [Parameter] public string? ImageAlt { get; set; }
}
