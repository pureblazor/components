@inherits PureComponent
@namespace Pure.Blazor.Components
<ul class="inline-flex -space-x-px text-sm @Styles">

    @if (EdgeControls)
    {
        <PurePaginationItem Value="@(FirstPage)" Disabled="@(Current == FirstPage)" OnClick="@OnChange">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
                <path fill-rule="evenodd"
                      d="M4.72 9.47a.75.75 0 0 0 0 1.06l4.25 4.25a.75.75 0 1 0 1.06-1.06L6.31 10l3.72-3.72a.75.75 0 1 0-1.06-1.06L4.72 9.47Zm9.25-4.25L9.72 9.47a.75.75 0 0 0 0 1.06l4.25 4.25a.75.75 0 1 0 1.06-1.06L11.31 10l3.72-3.72a.75.75 0 0 0-1.06-1.06Z"
                      clip-rule="evenodd"/>
            </svg>

        </PurePaginationItem>
    }
    <PurePaginationItem Value="@(PreviousPage)" Disabled="@(PreviousPage < FirstPage)" OnClick="@OnChange">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
            <path fill-rule="evenodd"
                  d="M11.78 5.22a.75.75 0 0 1 0 1.06L8.06 10l3.72 3.72a.75.75 0 1 1-1.06 1.06l-4.25-4.25a.75.75 0 0 1 0-1.06l4.25-4.25a.75.75 0 0 1 1.06 0Z"
                  clip-rule="evenodd"/>
        </svg>
    </PurePaginationItem>
    @for (var _i = FirstSibling; _i <= LastSibling; _i++)
    {
        //Capture variable; required as the render is only evaluated once the loop terminates
        var i = _i;
        <PurePaginationItem Value="@i" Active="@(i == Current)" OnClick="@OnChange">@i</PurePaginationItem>
    }
    <PurePaginationItem Value="@(NextPage)" Disabled="@(NextPage > LastPage)" OnClick="@OnChange">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
            <path fill-rule="evenodd"
                  d="M8.22 5.22a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L11.94 10 8.22 6.28a.75.75 0 0 1 0-1.06Z"
                  clip-rule="evenodd"/>
        </svg>

    </PurePaginationItem>
    @if (EdgeControls)
    {
        <PurePaginationItem Value="@(LastPage)" Disabled="@(Current == LastPage)" OnClick="@OnChange">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
                <path fill-rule="evenodd"
                      d="M15.28 9.47a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 1 1-1.06-1.06L13.69 10 9.97 6.28a.75.75 0 0 1 1.06-1.06l4.25 4.25ZM6.03 5.22l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L8.69 10 4.97 6.28a.75.75 0 0 1 1.06-1.06Z"
                      clip-rule="evenodd"/>
            </svg>
        </PurePaginationItem>
    }
</ul>
