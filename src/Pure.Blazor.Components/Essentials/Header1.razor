@inherits PureComponent
<div class="flex flex-col sm:flex-row justify-between items-center gap-4 sm:gap-0">
    <h1 id="@Id" class="text-2xl sm:text-3xl font-extrabold leading-6 subpixel-antialiased text-gray-900 tracking-wide @Styles">@ChildContent</h1>
    @if (Suffix is not null)
    {
        @Suffix
    }
</div>
@if (!string.IsNullOrWhiteSpace(Subtitle))
{
    <p class="mt-2 text-sm text-gray-800">@Subtitle</p>
    <hr class="my-4 border-gray-200"/>
}
else
{
    <hr class="mt-2 mb-4 border-gray-200"/>
}

@code {

    [Parameter] public string Id { get; set; } = string.Empty;

    [Parameter] public string? Subtitle { get; set; }
    [Parameter] public RenderFragment? Suffix { get; set; }
}
